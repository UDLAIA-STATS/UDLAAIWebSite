---
import Navbar from "@components/shared/Navbar.astro";
import Footer from "@components/shared/Footer.astro";
import ClientRouter from "astro/components/ClientRouter.astro";

interface Props {
  title: string;
}

const { title }: Props = Astro.props;

const name = Astro.cookies.get("name")?.value;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Admin Panel</title>
    <ClientRouter />
  </head>
  <body class="min-h-full w-full h-full min-w-full">
    <Navbar />
    <main>
      <section class="mx-10 my-5 h-svh">
        <div class="text-2xl font-bold" id="title">
          <h1>{title}</h1>
        </div>
        <div class="text-lg py-4" id="subtitle">
          <span>
            Bienvenido, {name}.
          </span>
        </div>
        <div class="py-3 flex flex-col gap-3 w-full">
          <slot />
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
  }
</style>
