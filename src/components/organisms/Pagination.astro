---
interface Props {
  totalPages: number;
}

const { totalPages } = Astro.props;

const url = Astro.url;
const pageParam = Number(url.searchParams.get("page") ?? 1);

const currentPage = Math.max(pageParam > totalPages ? totalPages : pageParam, 1);

const path = url.pathname;
---


<div class="flex justify-center my-6 w-full h-fit gap-4 align-middle">
  <a
    href={`${path}?page=${Math.max(currentPage - 1, 1)}`}
    class="p-2 bg-[#C10230] text-white rounded"
  >
    Anterior
  </a>

  <span class="align-middle text-center p-2">PÃ¡gina {currentPage} de {totalPages}</span>

  <a
    href={`${path}?page=${Math.min(currentPage + 1, totalPages)}`}
    class="p-2 bg-[#C10230] text-white rounded"
  >
    Siguiente
  </a>
</div>

