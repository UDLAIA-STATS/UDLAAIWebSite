---
import "@styles/global.css";
import arrowNext from "@assets/arrow_next.svg";
import OutlinedButton from "@components/buttons/OutlinedButton.astro";

const user = Astro.cookies.get("user")
  ? (JSON.parse(Astro.cookies.get("user")?.value as string) as LoggedUser)
  : null;
---

<section
  class="flex flex-col justify-start content-center items-center gap-4 pt-10 h-svh"
>
  <div
    class="flex lg:text-5xl font-bold text-center lg:w-3xl justify-center sm:text-2xl"
  >
    <h1>Herramienta de Extracción de Datos de Partidos</h1>
  </div>
  <div
    class="flex pt-5 lg:text-3xl font-semibold text-center justify-center lg:w-3xl sm:text-xl"
  >
    <p>Accede a tus estadísticas  y datos históricos</p>
  </div>
  <div
    class="flex flex-row flex-wrap justify-evenly w-lg p-10 min-w-sm max-w-svw"
  >
    <OutlinedButton
      href="/auth/login"
      label="Iniciar Ahora"
      className={user ? "hidden" : ""}
      iconSrc={arrowNext.src}
      iconRotation={180}
    />
    <OutlinedButton
      href="/equipo/jugadores/estadisticas"
      label="Estadísticas"
      iconSrc={arrowNext.src}
      iconRotation={180}
    />
  </div>
</section>
