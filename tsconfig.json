{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*",
    "./tailwind.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es6",
    "removeComments": true,
    "stripInternal": true,
    "noEmitHelpers": true,
    "strict": true,
    "declaration": false,
    "sourceMap": false,
    "downlevelIteration": false,
    "lib": ["ES6", "DOM"],
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@consts/*": [
        "./src/consts/*"
      ],
      "@interfaces/*": [
        "./src/interfaces/*"
      ],
      "@layouts/*": [
        "./src/layouts/*"
      ],
      "@pages/*": [
        "./src/pages/*"
      ],
      "@styles/*": [
        "./src/styles/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@actions/*": [
        "./src/actions/*"
      ],
      "@views/*": [
        "./src/views/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ]
    },
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  }
}